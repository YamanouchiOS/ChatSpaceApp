          %input{class:"form__message js-content", :placeholder=>"type a message", :type=>"text", :name=>"message[content]", :id=>"message_content"}

          .form__mask
            %label{class:"form__mask__image", :for =>"message_image"}
            %i{class:"fa fa-picture-o icon"}
            %input{class:"hidden js-file", :type => "file", :name => "message[image]", :id => "message_image"}
            %input{class:"form__submit", :type => "submit", :name => "commit", :value => "Send", :data-disable-with => "Send"}
